{
    "compilerOptions": {
        "outDir": "./dist/",
        "module": "esnext",
        "esModuleInterop": true,
        "target": "es5",
        "lib": [
          "es6",
          "dom",
          "es2018",
          "ES2018.Intl"
        ],
        "sourceMap": true,
        "allowJs": true,
        "jsx": "react",
        "moduleResolution": "node",
        "rootDir": "src",
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "importHelpers": true,
        "strictNullChecks": true,
        "suppressImplicitAnyIndexErrors": true,
        "noUnusedLocals": true,
        "allowSyntheticDefaultImports": true,
        "removeComments": true,
        "alwaysStrict": true, 
        "resolveJsonModule": true
      },
      "exclude": [
        "dist",
        "node_modules",
        "build",
        "scripts",
        "acceptance-tests",
        "webpack",
        "jest",
        "src/setupTests.ts",
        "target"
      ]
    }
}
